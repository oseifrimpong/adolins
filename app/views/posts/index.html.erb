<%= flash[:alert] %>

<div class="all-posts">
 <% @posts.each do |post| %>
 <div class='col-sm-6 col-lg-4'>
  <div class="card">
    <div class="card-topper" style='background-image: url(<%= post.image %>);'></div>
    <div class="card-block">
      <h4 class="card-title"><%= link_to truncate(post.title, length: 30), post, class: 'title-link', style: ':hover{background-color: none;}' %></h4>
      <p class="published-date"><%= post.created_at %></p>
      <div class="card-text">
      	<p><%= sanitize post.body  %></p>
      </div>
      <%= link_to 'Read', post %>
    </div>
  </div>
</div> 
<% end %>
</div>
<div class="pagination">
  <div class="page_info">
    <%= page_entries_info @posts %>
  </div>
  <%= will_paginate @posts, :container => false %>
</div>











     