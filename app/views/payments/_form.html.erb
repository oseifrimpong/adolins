<div class="payment col-lg-6 col-lg-offset-3">

<h2>Payment</h2>
<%= form_for(payment) do |f| %>
  <% if payment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(payment.errors.count, "error") %> prohibited this payment from being saved:</h2>

      <ul>
      <% payment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.text_field :firstname, autofocus: true, placeholder: 'First Name'  %>
  </div>

  <div class="field">
    <%= f.text_field :lastname, placeholder: 'Last Name' %>
  </div>

  <div class="field"> 
    <%= f.text_field :phonenumber, placeholder: 'Phone Number' %>
  </div>

  <div class="field">
    <%= f.text_field :email, placeholder: 'Email' %>
  </div>

  <div class="field">
    <%= f.text_field :currency, placeholder: 'Currency', value: "GHC", :readonly => true %>
  </div>

  <div class="field">
    <%= f.text_field :amount, placeholder: 'Amount', value: "50.00", :readonly => true %>
  </div>

  <div class="actions">
    <%= f.submit "Proceed to Payment" %>
  </div>
<% end %>

</div>
